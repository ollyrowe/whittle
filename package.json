{
  "name": "whittle",
  "version": "1.25.0",
  "description": "The official Whittle game!",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ollyrowe/whittle.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ollyrowe/whittle/issues"
  },
  "homepage": "https://whittlegame.com",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test:unit": "craco test",
    "test:answers": "node --loader ts-node/esm ./src/scripts/validateAnswers.ts",
    "eject": "react-scripts eject"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): bump version to v${nextRelease.version}"
        }
      ]
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.5",
    "@dnd-kit/sortable": "^7.0.1",
    "@mui/icons-material": "^5.10.6",
    "@mui/material": "^5.10.7",
    "@mui/styled-engine-sc": "^5.10.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "class-transformer": "^0.5.1",
    "html-to-image": "^1.10.8",
    "react": "^18.2.0",
    "react-canvas-confetti": "^1.3.0",
    "react-dom": "^18.2.0",
    "react-lottie-player": "^1.5.0",
    "react-scripts": "5.0.1",
    "react-timer-hook": "^3.0.5",
    "reflect-metadata": "^0.1.13",
    "styled-components": "^5.3.6",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.5",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "chalk": "^4.1.2",
    "craco-alias": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "testing-library/prefer-screen-queries": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
